<h1>My Bookmarked Pages</h1>
<div style="padding-top: 5px; margin-bottom: 10px;">
	<a href="/bookmarks/new" class="btn btn-success">Bookmark new page</a>
</div>
<div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Bookmark</th>
				<th>Added On</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>	
		<% @bookmarks.each do |bm| %>
			<tr>
				<td><a href="<%= bm.url %>"><%= bm.name %></a></td>
				<td><%= bm.added_on %></td>
				<td><a href="/bookmarks/<%= bm.id %>" class="muted">Details</a></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<%= will_paginate @bookmarks, :renderer => BootstrapPagination::Sinatra %>
</div>